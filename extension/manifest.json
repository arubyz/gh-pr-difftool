{
    "name": "GitHub PR DiffTool",
    "icons": { "128": "images/icon.png" },
    "description": "Launch 'git difftool' for the current GitHub PR",
    "version": "1.0",
    "permissions":
    [
        "activeTab"
    ],
    "background":
    {
        "scripts": [ "background.js" ],
        "persistent": false
    },
    "browser_action":
    {
        "default_title": "Launch 'git difftool'",
        "default_icon": { "32": "images/icon.png" }
    },
    "manifest_version": 2
}
